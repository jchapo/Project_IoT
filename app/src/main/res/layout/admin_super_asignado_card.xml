<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/md_theme_inverseOnSurface_mediumContrast"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Imagen a la izquierda -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_outline" />

        <!-- Texto en el centro -->
        <TextView
            android:id="@+id/superAsignedTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Nombre del supervisor" />

        <!-- Icono a la derecha -->
        <ImageView
            android:id="@+id/botonEliminarSuperAsignado"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_remove_outline" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
